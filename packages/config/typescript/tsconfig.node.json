{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "esnext",

        "forceConsistentCasingInFileNames": true,
        "allowUnreachableCode": true,

        "esModuleInterop": true,
        "isolatedModules": true,
        "resolveJsonModule": true,

        "strict": false,
        "noImplicitAny": false,
        "noEmit": true,
        "preserveWatchOutput": true
    }
}
